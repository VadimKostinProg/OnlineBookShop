@model LoginDTO

@{
    ViewBag.Title = "Login";
}

<form asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
    <div class="container mt-5 w-50">
        <div class="row mb-3">
            <div class="col-12">
                <h2 class="text-center">Login</h2>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-4">
                <label asp-for="Email" class="form-control" >Email:</label>
            </div>
            <div class="col-8">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="Password" class="form-control">Password:</label>
            </div>
            <div class="col-8">
                <input type="password" asp-for="Password" class="form-control" />
            </div>
        </div>
        <div class="row m-3">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>