@model DiscountSetRequest

@{
    ViewBag.Title = "Set discount";
}

<form asp-controller="Discount" asp-action="SetDiscount" method="post">
    <div class="container border box-shadow mt-5">
        <h3>Set discount</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="w-25">Category</th>
                    <th class="w-25">Product</th>
                    <th class="w-25">Count</th>
                    <th class="w-25">Discount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select oninput="categoryChanged(this)" asp-items="@ViewBag.CategoriesList" class="form-control">
                            <option value="" disabled selected>Select category...</option>
                        </select>
                    </td>
                    <td>
                        <select id="productsSelect" asp-for="ProductId" class="form-control"></select>
                    </td>
                    <td>
                        <input type="number" min="2" asp-for="Count" class="form-control" />
                    </td>
                    <td>
                        <input type="number" min="1" max="99.9" asp-for="DiscountAmount" class="form-control" />
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="row mt-3">
            <button type="Submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/setDiscount.js"></script>
}