@model ProductResponse

@{
    ViewBag.Title = "Delete Product";
}

<form asp-controller="Products" asp-action="Delete" method="post">
    <h2 class="text-primary mt-3">
        Delete Product
    </h2>

    <input asp-for="Id" hidden />
    <div class="container border p-3 pt-4">
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Title" class="pt-3">Title</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Title" class="form-control" disabled/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Description" class="pt-3">Descrition</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Description" class="form-control" disabled />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="CategoryId" class="pt-3">Category</label>
            </div>
            <div class="col-6">
                <input asp-for="CategoryId" class="form-control" disabled value="@Model.CategoryId" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="ISBN" class="pt-3">ISBN</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="ISBN" class="form-control" disabled />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Author" class="pt-3">Author</label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Author" class="form-control" disabled />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Price" class="pt-3">Price</label>
            </div>
            <div class="col-6">
                <input type="number" asp-for="Price" class="form-control" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary form-control">Back</a>
            </div>
        </div>
    </div>
</form>