@model IEnumerable<ProductResponse>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pt-3">
    @foreach (ProductResponse product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card shadow p-3 border-top bordeer-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pd-0">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-danger text-center">by <b>@product.Author</b></p>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control rounded mt-3">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
